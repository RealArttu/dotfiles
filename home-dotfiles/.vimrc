" Enable line numbers
set number

" Enable syntax highlighting
syntax enable

" Use a dark background color scheme
colorscheme desert

" Use tab characters for indentation
set tabstop=2
set shiftwidth=2
set expandtab

" Show matching parentheses
set showmatch

" Enable incremental search
set incsearch

" Enable mouse support (if your terminal supports it)
set mouse=a

" Enable line wrapping
set wrap

" Enable line wrapping with indentation
set linebreak
